{
  "name": "@firebolt-js/configurations",
  "version": "0.1.0",
  "description": "Firebolt configurations",
  "files": [
    "src/schemas/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdkcentral/firebolt-configurations.git"
  },
  "scripts": {
    "prepare": "mkdir -p dist/schemas/app-manifest dist/schemas/device-manifest dist/schemas/version-manifest",
    "merge": "npm run merge:app && npm run merge:version && npm run merge:device",
    "build": "npm run build:version && npm run build:device && build:app",
    "validate": "npm run validate:version && npm run validate:device",
    "apis:clear": "node ./src/js/apis/index.mjs -t ./src/json/firebolt.json -o clear",
    "apis:import": "node ./src/js/apis/index.mjs -t ./src/json/firebolt.json -o import",
    "apis:report": "node ./src/js/apis/index.mjs -t ./src/json/firebolt.json -o report",
    "capabilities:clear": "node ./src/js/capabilities/index.mjs -t ./src/json/firebolt.json -o clear",
    "capabilities:import": "node ./src/js/capabilities/index.mjs -t ./src/json/firebolt.json -o import",
    "capabilities:add": "node ./src/js/capabilities/index.mjs -t ./src/json/firebolt.json -o add",
    "capabilities:report": "node ./src/js/capabilities/index.mjs -t ./src/json/firebolt.json -o report",
    "merge:app": "node ./src/js/merge/index.mjs -i ./src/schemas/app-manifest/app-manifest.json -o ./dist/schemas/app-manifest/app-manifest.json",
    "merge:version": "node ./src/js/merge/index.mjs -i ./src/schemas/version-manifest/version-manifest.json -o ./dist/schemas/version-manifest/version-manifest.json",
    "merge:device": "node ./src/js/merge/index.mjs -i ./src/schemas/device-manifest/device-manifest.json -o ./dist/schemas/device-manifest/device-manifest.json",
    "build:app": "npm run merge:app",
    "build:version": "npm run merge:version",
    "build:device": "npm run merge:device && node ./src/js/device/index.mjs -i ./dist/schemas/device-manifest/device-manifest.json -o ./dist/schemas/device-manifest/device-manifest.json",
    "validate:version": "node ./src/js/validate/index.mjs -s ./dist/schemas/version-manifest/version-manifest.json -i ./src/json/firebolt.json -ss ./node_modules/@firebolt-js/schemas/src/schemas",
    "validate:device": "node ./src/js/validate/index.mjs -s ./dist/schemas/device-manifest/device-manifest.json -i ./src/json/devices/reference.json -ss ./node_modules/@firebolt-js/schemas/src/schemas"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rdkcentral/firebolt-configurations/issues"
  },
  "homepage": "https://github.com/rdkcentral/firebolt-configurations#readme",
  "devDependencies": {
    "@firebolt-js/manage-sdk": "../firebolt-manage-sdk",
    "@firebolt-js/openrpc": "^1.7.0-next.3",
    "@firebolt-js/schemas": "^0.5.0-next.0",
    "@firebolt-js/sdk": "../firebolt-core-sdk",
    "ajv": "^8.3.0",
    "ajv-formats": "^2.1.0",
    "nopt": "^6.0.0",
    "path": "^0.12.7"
  }
}
